<div class='row'>
  <div class='small-12 columns my_subscriptions'>
    <%= simple_form_for @topic, :html => {:multipart => true} do |f| %>
      <%= f.input :title %>
      <%= f.file_field :image %>
      <%= f.button :submit %>
    <% end %>

    <p>*Add new topic and get recognition. Connect your twitter account
    and we'll share your handle!</p>

    <%= render "topic_created_by" %>
  </div>
</div>
