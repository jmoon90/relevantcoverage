<div class='row'>
  <div class='small-12 columns topics'>
   <p>All Topics | <%= link_to "Add new topic", new_topic_path %></p>
  </div>
</div>

<div class='row'>
  <% @topics.each do |topic| %>
    <% unless Topic.subscribed?(current_user, topic.id) %>

      <div class='medium-4 small-12 columns topics'>
        <li class='topic'>

          <%= simple_form_for @subscription do |f| %>
            <%= f.hidden_field :topic_id, :value => topic.id %>
            <h4><%= link_to topic.name, topic_path(topic) %></h4>
            <%= image_tag(topic.image) if topic.image? %>
            <%= f.submit "Subscribe", class: "button tiny" %>
          <% end %>
        </li>
      </div>

    <% end %>
  <% end %>
</div>
